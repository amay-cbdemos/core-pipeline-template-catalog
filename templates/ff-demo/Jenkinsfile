library 'cb-days@ff-demo'
pipeline {
  agent none
  options { 
    buildDiscarder(logRotator(numToKeepStr: '2'))
    skipDefaultCheckout true
    preserveStashes(buildCount: 2)
  }
  environment {
    repoOwner = "${repoOwner}"
    credId = "${githubCredentialId}"
  }
  stages('Build images')
  {
    stage('Build and Push Backend image') {
      when {
        beforeAgent true
        branch 'master'
      }
      steps { 
        imgBuildNexusGeneric("news-backend", "${username}", "${registry}", "news-backend/")
        {
          checkout scm
        }
      }
      post {
        success {
          echo "${JOB_NAME} pipeline job is awaiting approval at: ${RUN_DISPLAY_URL}"
        }
      }
    }  
  }
}

